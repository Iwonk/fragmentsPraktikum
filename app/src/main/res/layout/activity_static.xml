<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StaticActivity"
    android:weightSum="2"
    android:orientation="vertical"
    >

    <fragment
        android:layout_weight="1"
        android:id="@+id/red_fragment_placeholder"
        android:name="com.example.fragmentspraktikum.fragments.RedFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <fragment
        android:layout_weight="1"
        android:id="@+id/blue_fragment_placeholder"
        android:name="com.example.fragmentspraktikum.fragments.BlueFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</androidx.appcompat.widget.LinearLayoutCompat>